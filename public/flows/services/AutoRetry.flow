attributes:
  ArrowStyle: ArrowEnd
  NodeStyle: BoxIcon
  PROCESS_VISIBILITY: PUBLIC
  PerformanceLevel: '0'
  display: x=48,y=41,w=95,h=26
steps:
- id: S1
  name: Start
  descriptor: flowbee-demo.start
  attributes:
    display: x=82,y=121,w=60,h=40
  links:
  - id: L1
    attributes:
      display: type=Elbow,x=168,y=141,xs=146&190,ys=141&141
    event: FINISH
    to: S4
- id: S2
  name: Stop
  descriptor: flowbee-demo.stop
  attributes:
    display: x=504,y=120,w=60,h=40
- id: S3
  name: |-
    Invoke
    Retryable
  descriptor: flowbee-demo.adapter.rest.RestServiceAdapter
  attributes:
    EndpointUri: ${serviceUrl}
    HttpMethod: POST
    REQUEST_VARIABLE: serviceRequest
    RESPONSE_VARIABLE: serviceResponse
    display: x=341,y=111,w=100,h=60
    max_tries: '3'
    retry_interval: '10'
  links:
  - id: L2
    attributes:
      display: type=Elbow,x=472,y=140,xs=445&500,ys=140&140
    event: FINISH
    to: S2
- id: S4
  name: |-
    Create
    Request
  descriptor: flowbee-demo.script.ScriptExecutorActivity
  attributes:
    Output Documents: '["serviceRequest"]'
    Rule: |-
      serviceRequest = new org.json.JSONObject()
      serviceRequest.put("something", "unimportant")
    SCRIPT: Groovy
    display: x=194,y=111,w=100,h=60
  links:
  - id: L3
    attributes:
      display: type=Elbow,x=317,y=141,xs=298&337,ys=141&141
    event: FINISH
    to: S3
variables:
  serviceRequest:
    type: org.json.JSONObject
  serviceResponse:
    type: org.json.JSONObject
  serviceUrl:
    type: java.lang.String
