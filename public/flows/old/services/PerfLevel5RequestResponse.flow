attributes:
  ArrowStyle: ArrowEnd
  NodeStyle: BoxIcon
  PROCESS_VISIBILITY: SERVICE
  PerformanceLevel: '5'
  display: x=35,y=36,w=266,h=26
  requestMethod: POST
  requestPath: perf5req-resp
steps:
- id: s1
  name: Start
  path: flowbee-demo.start
  attributes:
    display: x=50,y=130,w=60,h=40
  links:
  - id: l1
    attributes:
      display: type=Elbow,x=140,y=150,xs=114&166,ys=150&150
    to: s5
- id: s2
  name: Stop
  path: flowbee-demo.stop
  attributes:
    display: x=670,y=130,w=60,h=40
- id: s3
  name: Respond
  path: flowbee-demo.script.ScriptExecutorActivity
  attributes:
    Output Documents: '["response"]'
    Rule: response = new model.StatusResponse(200, "OK").getJson()
    SCRIPT: Groovy
    display: x=510,y=120,w=100,h=60
  links:
  - id: l2
    attributes:
      display: type=Elbow,x=640,y=150,xs=614&666,ys=150&150
    to: s2
- id: s4
  name: Invoke
  path: flowbee-demo.adapter.rest.RestServiceAdapter
  attributes:
    EndpointUri: '#{props[''services.url'']}/api/Workgroups'
    HttpMethod: POST
    REQUEST_VARIABLE: serviceRequest
    RESPONSE_VARIABLE: serviceResponse
    display: x=340,y=120,w=100,h=60
  links:
  - id: l3
    attributes:
      display: type=Elbow,x=475,y=150,xs=444&506,ys=150&150
    to: s3
- id: s5
  name: |-
    Create
    Request
  path: flowbee-demo.script.ScriptExecutorActivity
  attributes:
    Output Documents: '["serviceRequest"]'
    Rule: |
      import org.json.JSONObject

      serviceRequest = new JSONObject("""{
        "name": "${request.get('groupName')}",
        "description": "another group for testing"
      }""")
    SCRIPT: Groovy
    display: x=170,y=120,w=100,h=60
  links:
  - id: l4
    attributes:
      display: type=Elbow,x=305,y=150,xs=274&336,ys=150&150
    to: s4
variables:
  request:
    type: org.json.JSONObject
  requestHeaders:
    type: java.util.Map<String,String>
  response:
    type: org.json.JSONObject
  responseHeaders:
    type: java.util.Map<String,String>
  serviceRequest:
    type: org.json.JSONObject
  serviceResponse:
    type: org.json.JSONObject
