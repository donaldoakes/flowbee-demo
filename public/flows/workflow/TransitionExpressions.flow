attributes:
  ArrowStyle: ArrowEnd
  NodeStyle: BoxIcon
  PROCESS_VISIBILITY: PUBLIC
  PerformanceLevel: '0'
  display: x=50,y=50,w=0,h=0
steps:
- id: S1
  name: Start
  specifier: com.centurylink.mdw.workflow.activity.process.ProcessStartActivity
  attributes:
    display: x=63,y=138,w=60,h=40
  links:
  - id: L1
    attributes:
      display: type=Elbow,x=156,y=159,xs=128&184,ys=159&159
    event: FINISH
    to: S4
- id: S2
  name: Stop
  specifier: com.centurylink.mdw.workflow.activity.process.ProcessFinishActivity
  attributes:
    display: x=533,y=248,w=60,h=40
- id: S3
  name: increment n
  specifier: com.centurylink.mdw.workflow.activity.script.ScriptExecutorActivity
  attributes:
    Rule: |-
      if (n == null)
          n = 0

      n++
    SCRIPT: Groovy
    display: x=328,y=133,w=100,h=60
  links:
  - id: L4
    attributes:
      display: type=Elbow,x=381,y=217,xs=381&381,ys=197&237
    event: FINISH
    to: S5
- id: S4
  name: dummy
  specifier: com.centurylink.mdw.workflow.activity.DefaultActivityImpl
  attributes:
    display: x=188,y=140,w=60,h=40
  links:
  - id: L3
    attributes:
      display: type=Elbow,x=288,y=160,xs=252&324,ys=160&160
    event: FINISH
    to: S3
- id: S5
  name: stop?
  specifier: com.centurylink.mdw.workflow.activity.script.ScriptEvaluator
  attributes:
    Expression: n > loops
    SCRIPT: Groovy
    display: x=340,y=241,w=85,h=56
  links:
  - id: L2
    attributes:
      display: type=Elbow,x=459,y=249,xs=428&529,ys=268&268
    event: FINISH
    to: S2
    result: 'true'
  - id: L5
    attributes:
      TRANSITION_DELAY: ${delay}s
      TRANSITION_RETRY_COUNT: ${max}
      display: type=Elbow,x=269,y=249,xs=340&218&218,ys=269&269&180
    event: FINISH
    to: S4
    result: 'false'
variables:
  delay:
    type: java.lang.Integer
  loops:
    type: java.lang.Integer
  max:
    type: java.lang.Integer
  n:
    type: java.lang.Integer
