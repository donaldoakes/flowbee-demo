attributes:
  ArrowStyle: ArrowEnd
  NodeStyle: BoxIcon
  PROCESS_VISIBILITY: PUBLIC
  display: x=61,y=26,w=63,h=27
steps:
- id: s1
  name: Start
  path: flowbee-demo.start
  attributes:
    display: x=342,y=24,w=60,h=40
  links:
  - id: l1
    attributes:
      display: type=Elbow,x=470,y=78,xs=372&372,ys=68&147
    to: s3
- id: s2
  name: Stop
  path: flowbee-demo.stop
  attributes:
    display: x=174,y=475,w=60,h=40
- id: s3
  name: "Send\r\nVia"
  path: flowbee-demo.decision
  attributes:
    Expression: ${sendVia}
    SCRIPT: javax.el
    display: x=325,y=151,w=94,h=71
  links:
  - id: l2
    attributes:
      display: type=Elbow,x=292,y=164,xs=321&258,ys=186&266
    to: s5
    result: smtp
  - id: l3
    attributes:
      display: type=Elbow,x=420,y=164,xs=423&490,ys=186&267
    to: s4
    result: sendgrid
- id: s5
  name: SMTP
  path: flowbee-demo.notification.EmailNotificationActivity
  attributes:
    CCGroups: '["Flowbee Support"]'
    NoticeGroups: '["Developers"]'
    RecipientsExpression: '${recipientList != null ? recipientList : recipient}'
    display: x=154,y=236,w=100,h=60
    from: flowbee@example.com
    noticeType: SMTP
    subject: Test Email via SMTP
    template: base/emailTemplate.html
    template_assetVersion: '[0.1,1)'
  links:
  - id: l4
    attributes:
      display: type=Elbow,x=204,y=322,xs=204&204,ys=300&345
    to: s6
- id: s4
  name: SendGrid
  path: flowbee-demo.sendgrid.SendgridActivity
  attributes:
    CCGroups: '["Flowbee Support"]'
    NoticeGroups: '["Developers"]'
    RecipientsExpression: '${recipientList ? recipientList : recipient}'
    display: x=494,y=237,w=100,h=60
    from: flowbee.support@example.com
    subject: Test Email via SendGrid
    template: base/emailTemplate.html
    template_assetVersion: '[0.1,1)'
  links:
  - id: l6
    attributes:
      display: type=Elbow,x=544,y=322,xs=544&544,ys=301&344
    to: s7
- id: s6
  name: "SMTP\r\nTask"
  path: flowbee-demo.task.AutoFormManualTaskActivity
  attributes:
    STATUS_AFTER_EVENT: Cancelled
    TASK_PAGELET: base/AutoFormManualTask.pagelet
    TASK_TEMPLATE: tests.notifications/SmtpTask.task
    TASK_TEMPLATE_assetVersion: '[0.1,1)'
    Wait for Task: 'true'
    display: x=153,y=349,w=103,h=68
  links:
  - id: l5
    attributes:
      display: type=Elbow,x=204,y=446,xs=204&204,ys=421&471
    to: s2
- id: s7
  name: "SendGrid\r\nTask"
  path: flowbee-demo.task.AutoFormManualTaskActivity
  attributes:
    STATUS_AFTER_EVENT: Cancelled
    TASK_PAGELET: base/AutoFormManualTask.pagelet
    TASK_TEMPLATE: tests.notifications/SendgridTask.task
    TASK_TEMPLATE_assetVersion: '[0.1,1)'
    Wait for Task: 'true'
    display: x=495,y=348,w=102,h=70
  links:
  - id: l7
    attributes:
      display: type=Elbow,x=546,y=444,xs=546&546,ys=422&471
    to: s8
- id: s8
  name: Stop
  path: flowbee-demo.stop
  attributes:
    display: x=516,y=475,w=60,h=40
notes:
- id: n9
  attributes:
    display: x=52,y=70,w=174,h=26
  text: For manual testing
variables:
  recipient:
    type: java.lang.String
  recipientList:
    type: java.util.List<String>
  sendVia:
    type: java.lang.String
